[{
  "name": "pdf_extract_text",
  "description": "Extract text content from PDF documents.",
  "parameters": {
    "type": "object",
    "properties": {
      "file_path": {"type": "string"},
      "pages": {"type": ["string","null"]},
      "format": {"type": ["string","null"]}
    },
    "required": ["file_path"]
  },
  "execution": {
    "type": "http",
    "method": "POST",
    "url": "${PDF_API_BASE_URL}/extract",
    "headers": {
      "Authorization": "Bearer ${PDF_API_TOKEN}",
      "Content-Type": "application/json"
    },
    "query_map": {
      "file_path": "filePath",
      "pages": "pages",
      "format": "outputFormat"
    },
    "timeout": 60
  }
}, {
  "name": "pdf_generate_report",
  "description": "Generate PDF reports from templates and data.",
  "parameters": {
    "type": "object",
    "properties": {
      "template": {"type": "string"},
      "data": {"type": "object"},
      "output_path": {"type": ["string","null"]}
    },
    "required": ["template", "data"]
  },
  "execution": {
    "type": "http",
    "method": "POST",
    "url": "${PDF_API_BASE_URL}/generate",
    "headers": {
      "Authorization": "Bearer ${PDF_API_TOKEN}",
      "Content-Type": "application/json"
    },
    "query_map": {
      "template": "templateId",
      "data": "templateData",
      "output_path": "outputPath"
    },
    "timeout": 120
  }
}]
