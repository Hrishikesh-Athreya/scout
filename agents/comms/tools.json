[{
  "name": "send_slack_message",
  "description": "Send a message with file attachment to a Slack channel.",
  "parameters": {
    "type": "object",
    "properties": {
      "fileUrl": {
        "type": "string",
        "description": "URL of the file to send"
      },
      "channelId": {
        "type": "string", 
        "description": "Slack channel ID (e.g., 'C09BQEU1HCM')"
      },
      "threadTs": {
        "type": ["string", "null"],
        "description": "Thread timestamp for replying to a thread (optional)"
      }
    },
    "required": ["fileUrl", "channelId"]
  },
  "execution": {
    "type": "http",
    "method": "POST",
    "url": "http://localhost:8081/comms/slack",
    "headers": {
      "Content-Type": "application/json"
    },
    "body_map": {
      "fileUrl": "fileUrl",
      "channelId": "channelId", 
      "threadTs": "threadTs"
    },
    "timeout": 30
  }
}, {
  "name": "send_email_message",
  "description": "Send a message with file attachment via email to multiple recipients.",
  "parameters": {
    "type": "object",
    "properties": {
      "fileUrl": {
        "type": "string",
        "description": "URL of the file to send"
      },
      "recipients": {
        "type": "array",
        "items": {"type": "string"},
        "description": "List of email addresses to send to"
      }
    },
    "required": ["fileUrl", "recipients"]
  },
  "execution": {
    "type": "http",
    "method": "POST", 
    "url": "http://localhost:8081/comms/email",
    "headers": {
      "Content-Type": "application/json"
    },
    "body_map": {
      "fileUrl": "fileUrl",
      "recipients": "recipients"
    },
    "timeout": 30
  }
}]
