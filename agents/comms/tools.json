[{
  "name": "send_slack_message",
  "description": "Send a message with file attachment to Slack channels.",
  "parameters": {
    "type": "object",
    "properties": {
      "fileUrl": {
        "type": "string",
        "description": "URL of the file to send"
      },
      "channelId": {
        "type": ["string", "null"],
        "description": "Primary Slack channel ID (e.g., 'C09BQEU1HCM')"
      },
      "threadId": {
        "type": ["string", "null"],
        "description": "Thread ID for replying to a thread (optional)"
      },
      "channels": {
        "type": ["array", "null"],
        "items": {"type": "string"},
        "description": "Array of channel IDs to send to multiple channels"
      }
    },
    "required": ["fileUrl"]
  },
  "execution": {
    "type": "http",
    "method": "POST",
    "url": "https://scout-shqtd6.5sc6y6-4.usa-e2.cloudhub.io/comms/slack",
    "headers": {
      "Content-Type": "application/json"
    },
    "body_map": {
      "fileUrl": "fileUrl",
      "channelId": "channelId",
      "threadId": "threadId",
      "channels": "channels"
    },
    "timeout": 30
  }
}, {
  "name": "send_email_message",
  "description": "Send a message with file attachment via email to multiple recipients.",
  "parameters": {
    "type": "object",
    "properties": {
      "fileUrl": {
        "type": "string",
        "description": "URL of the file to send"
      },
      "recipients": {
        "type": "array",
        "items": {"type": "string"},
        "description": "List of email addresses to send to"
      }
    },
    "required": ["fileUrl", "recipients"]
  },
  "execution": {
    "type": "http",
    "method": "POST",
    "url": "https://scout-shqtd6.5sc6y6-4.usa-e2.cloudhub.io/comms/email",
    "headers": {
      "Content-Type": "application/json"
    },
    "body_map": {
      "fileUrl": "fileUrl",
      "recipients": "recipients"
    },
    "timeout": 30
  }
}]
